generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id      String  @id @default(uuid())
  name    String
  logoUrl String?
  cnpj    String
  phone   String?
  user    User[]

  @@map("organization")
}

model User {
  id             String       @id @default(uuid())
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  name           String
  email          String
  password       String
  avatarUrl      String?

  @@map("user")
}
